{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "index.js",
      "package.json"
    ],
    "rewrites": [
      {
        "source": "/timelines/*",
        "function": "returnWithOGP"
      },
      {
        "source": "/feed",
        "function": "returnRSS"
      },
      {
        "source": "/robots.txt",
        "destination": "/robots.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "public"
  }
}
